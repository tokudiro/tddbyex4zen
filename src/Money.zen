const std = @import("std");
const ok = std.testing.ok;
const Dollar = @import("Dollar.zen").Dollar;
const Franc = @import("Franc.zen").Franc;

test "testMultiplication" {
    var five = Dollar.init(5);
    ok( Dollar.init(10).equals(five.times(2)) );
    var product = five.times(3);
    ok( Dollar.init(15).equals(five.times(3)) );
}

test "testEquality" {
    ok( Dollar.init(5).equals(Dollar.init(5)) );
    ok( false == Dollar.init(5).equals(Dollar.init(6)) );
}

test "testFrancMultiplication" {
    var five = Franc.init(5);
    ok( Franc.init(10).equals(five.times(2)) );
    var product = five.times(3);
    ok( Franc.init(15).equals(five.times(3)) );
}

